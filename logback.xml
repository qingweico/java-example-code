<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- Console 日志输出设置 -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<!--格式化输出:%d表示日期,%thread表示线程名,%-5level:级别从左显示5个字符宽度%msg:日志消息,%n是换行符-->
            <!--<pattern>%white(%d{yyyy-MM-dd HH:mm:ss.SSS}) %green([%thread]) %red([%class:%line]) %cyan(%-5level) %yellow(%logger{36}) %magenta(-) %white(%msg%n)</pattern>-->
            <!--default-->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%class:%line] %-5level %logger{36} - %msg%n</pattern>
			<charset>utf8</charset>
		</encoder>
	</appender>
	<root level="info">
		<appender-ref ref="CONSOLE"/>
	</root>
</configuration>
